@model Park_Database.Model.Park_Time

@{
    ViewBag.Number = "Update";
}

<h2>Update</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()



    <form action="/Manager/Update" method="post" enctype="multipart/form-data">
        <div class="form-horizontal row">
            <h4>更新資料</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.Label("車牌:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Time_Carname, new { htmlAttributes = new { @readonly = "true", @style = "color:red" } })
                    @Html.ValidationMessageFor(model => model.Time_Carname, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("座位:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Time_Seat, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Time_Seat, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("預約時間", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Time_Start, "{0:yyyy-MM-dd}", new { type = "date", @class = "control-label col-md-2" })
                    @Html.ValidationMessageFor(model => model.Time_Start, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("截止時間", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Time_End, "{0:yyyy-MM-dd}", new { type = "date", @class = "control-label col-md-2" })
                    @Html.ValidationMessageFor(model => model.Time_End, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="更新" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>
}
